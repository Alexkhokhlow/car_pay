<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/list_item_car_name_text"
                android:text="AutoName:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/list_item_car_name"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoName"
                app:layout_constraintStart_toEndOf="@id/list_item_car_name_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/list_item_car_mark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoMark:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_name_text" />

            <TextView
                android:id="@+id/list_item_car_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoMark"
                app:layout_constraintStart_toStartOf="@+id/list_item_car_name"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_name" />

            <TextView
                android:id="@+id/list_item_car_model_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoModel:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_mark_text" />

            <TextView
                android:id="@+id/list_item_car_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoModel"
                app:layout_constraintStart_toStartOf="@+id/list_item_car_mark"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_mark" />

            <TextView
            android:id="@+id/list_item_car_fuel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AutoFuel:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_car_model_text" />

            <TextView
                android:id="@+id/list_item_car_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoFuel"
                app:layout_constraintStart_toStartOf="@+id/list_item_car_model"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_model" />

            <TextView
                android:id="@+id/list_item_car_mileage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutoMileage:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_fuel_text" />

            <TextView
                android:id="@+id/list_item_car_mileage"
                android:text="AutoMileage"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/list_item_car_mileage_text"
                app:layout_constraintTop_toBottomOf="@id/list_item_car_fuel"
                />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>